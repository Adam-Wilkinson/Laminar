<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:lc="using:Laminar.Avalonia.Commands">
    <ControlTheme x:Key="{x:Type lc:LaminarCommandSwitch}" TargetType="{x:Type lc:LaminarCommandSwitch}">
        <Setter Property="Template">
            <ControlTemplate>
                <ToggleSwitch IsChecked="{TemplateBinding IsOn, Mode=TwoWay}"/>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
    
    <ControlTheme x:Key="{x:Type lc:LaminarCommandIcon}" TargetType="{x:Type lc:LaminarCommandIcon}">
        <Setter Property="Template">
            <ControlTemplate>
                <Button Command="{Binding CommandInstance.Command , RelativeSource={RelativeSource TemplatedParent}}"
                        CommandParameter="{Binding CommandInstance.Parameter, RelativeSource={RelativeSource TemplatedParent}}">
                    <Path Data="{TemplateBinding IconData}" 
                          Stroke="{DynamicResource LaminarAccent}" 
                          StrokeThickness="3"/>
                </Button>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
    
    <DataTemplate x:Key="LaminarCommandIcon" x:DataType="{x:Type lc:LaminarCommandInstance}">
        <ContentControl IsEnabled="{Binding CanExecute}" 
            Content="{Binding}"
            ContentTemplate="{Binding Command.IconTemplate}">
            <ToolTip.Tip>
                <StackPanel>
                    <TextBlock Classes="b2" Text="{Binding  Description}"/>
                    <TextBlock Classes="b2" Text="{Binding Command.Gesture, StringFormat='Currently bound to {0}', FallbackValue='Nothing'}"/>
                    <TextBlock Classes="b2">Press Ctrl+B to change binding</TextBlock>
                </StackPanel>
            </ToolTip.Tip>
        </ContentControl>
    </DataTemplate>
    
    <DataTemplate x:Key="LaminarCommandMenuItem" x:DataType="{x:Type lc:LaminarCommandInstance}">
        <DockPanel IsEnabled="{Binding CanExecute}">
            <ToolTip.Tip>
                <StackPanel>
                    <TextBlock Classes="b2" Text="{Binding  Description}"/>
                    <TextBlock Classes="b2" Text="{Binding Command.Gesture, StringFormat='Currently bound to {0}', FallbackValue='Nothing'}"/>
                    <TextBlock Classes="b2">Press Ctrl+B to change binding</TextBlock>
                </StackPanel>
            </ToolTip.Tip>
            <ContentControl DockPanel.Dock="Left"
                            Content="{Binding}"
                            ContentTemplate="{Binding Command.IconTemplate}"
                            IsHitTestVisible="False"/>
            <TextBlock DockPanel.Dock="Right"
                       VerticalAlignment="Center"
                       Classes="b2"
                       Text="{Binding Command.Gesture}"
                       Opacity="0.4"/>
            <TextBlock Text="{Binding Command.Name}"
                       VerticalAlignment="Center"
                       Padding="8"/>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>
