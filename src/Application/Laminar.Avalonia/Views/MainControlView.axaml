<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Laminar.Avalonia.ViewModels"
             xmlns:dvm="using:Laminar.Avalonia.ViewModels.Design"
             xmlns:asp="using:Laminar.Avalonia.AdjustableStackPanel"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" d:DataContext="{x:Static dvm:DesignViewModel.MainControl}"
             x:DataType="vm:MainControlViewModel"
             x:Class="Laminar.Avalonia.Views.MainControlView"
             SidebarOpen="{Binding SidebarExpanded}">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <asp:AdjustableStackPanel DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Stretch" Orientation="Horizontal" Name="SidebarStackPanel" TransitionDuration="{DynamicResource AnimationDuration}" TransitionEasing="{DynamicResource AnimationEasing}">
            <ContentControl Name="FileNavigator" Content="{Binding FileNavigator}" asp:ResizeWidget.TargetSize="{Binding SidebarWidth, Mode=TwoWay}"/>
        </asp:AdjustableStackPanel>
        <TextBlock Classes="h2" HorizontalAlignment="Center" VerticalAlignment="Center">The script editor</TextBlock>
        <DockPanel.Resources>
            <ControlTheme x:Key="{x:Type asp:ResizeWidget}" TargetType="{x:Type asp:ResizeWidget}">
                <Setter Property="Template">
                    <ControlTemplate>
                        <Panel ClipToBounds="False">
                            <Rectangle Name="PART_DefaultResizeZone"
                                       MinHeight="2"
                                       MinWidth="2"
                                       Cursor="SizeWestEast"
                                       Fill="#0000"/>
                        </Panel>
                    </ControlTemplate>
                </Setter>
            </ControlTheme>
        </DockPanel.Resources>
    </DockPanel>
</UserControl>