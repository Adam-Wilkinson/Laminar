<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Laminar.Avalonia.App"
             xmlns:local="using:Laminar.Avalonia"
             xmlns:conv="using:Laminar.Avalonia.Converters"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="XamlAssets/Styles/FontStyles.axaml"/>
    </Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="XamlAssets/Resources/LaminarColorResources.axaml"/>
				<ResourceInclude Source="XamlAssets/Resources/SettingsResources.axaml"/>
				<ResourceInclude Source="XamlAssets/DataTemplates/LaminarCommandTemplates.axaml"/>
			</ResourceDictionary.MergedDictionaries>
			
			<conv:ScaleNameConverter x:Key="ScaleNameConverter"/>
			<conv:FirstNotNullValueConverter x:Key="FirstNotNullValueConverter"/>
		</ResourceDictionary>
	</Application.Resources>
</Application>