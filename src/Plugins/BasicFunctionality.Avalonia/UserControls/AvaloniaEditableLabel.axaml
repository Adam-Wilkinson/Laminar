<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uid="using:Laminar.PluginFramework.UserInterface.UserInterfaceDefinitions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="uid:EditableLabel+UITarget"
             x:Class="BasicFunctionality.Avalonia.UserControls.AvaloniaEditableLabel">
	<Panel>
		<TextBlock Name="Display"
				   Text="{Binding Value}"
				   VerticalAlignment="Center"
				   HorizontalAlignment="Center"
				   IsVisible="{Binding !Definition.IsBeingEdited}"
				   Margin="5"/>
		<TextBox Name="Editor"
				 Text="{Binding Value}"
				 VerticalAlignment="Center"
				 HorizontalAlignment="Center"
				 IsVisible="{Binding Definition.IsBeingEdited}"
				 Margin="0"/>
	</Panel>
</UserControl>
