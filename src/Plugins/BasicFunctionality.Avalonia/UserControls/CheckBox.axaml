<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uid="using:Laminar.PluginFramework.UserInterface.UserInterfaceDefinitions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="uid:Checkbox+UITarget"
             x:Class="BasicFunctionality.Avalonia.UserControls.CheckBox">
	<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
		<TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
		<CheckBox IsChecked="{Binding Value}" Margin="5,0" VerticalAlignment="Center"/>
	</StackPanel>
</UserControl>
