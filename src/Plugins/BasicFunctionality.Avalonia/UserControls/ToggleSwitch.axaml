<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uid="using:Laminar.PluginFramework.UserInterface.UserInterfaceDefinitions"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="40" d:DataContext="{x:Static uid:ToggleSwitch.DesignInstance}"
             x:DataType="uid:ToggleSwitch+UITarget"
             x:Class="BasicFunctionality.Avalonia.UserControls.ToggleSwitch">
	<DockPanel HorizontalAlignment="Stretch">
		<ToggleSwitch DockPanel.Dock="Right" IsChecked="{Binding Value}" VerticalAlignment="Center"/>
		<TextBlock DockPanel.Dock="Left" Text="{Binding Name}" Margin="5,0" VerticalAlignment="Center"/>
	</DockPanel>
</UserControl>
