<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uid="using:Laminar.PluginFramework.UserInterface.UserInterfaceDefinitions"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="40" d:DataContext="{x:Static uid:Slider.DesignInstance}"
             x:DataType="uid:Slider+UITarget"
             x:Class="BasicFunctionality.Avalonia.UserControls.SliderEditor">
	<Panel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
		<Grid IsHitTestVisible="False" VerticalAlignment="Center">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" SharedSizeGroup="SG_ValueName"/>
				<ColumnDefinition Width="*" SharedSizeGroup="SG_Value"/>
			</Grid.ColumnDefinitions>
			<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Name}"/>
			<TextBlock Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Text="{Binding Value, StringFormat=\{0:0.0\}}"/>
		</Grid>
		<Slider Value="{Binding Value}"
		        VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				Maximum="{Binding Definition.Max, FallbackValue=100}"
				Minimum="{Binding Definition.Min, FallbackValue=0}"
				Ticks="{Binding Definition.Increment, FallbackValue=1}"/>
	</Panel>
</UserControl>
