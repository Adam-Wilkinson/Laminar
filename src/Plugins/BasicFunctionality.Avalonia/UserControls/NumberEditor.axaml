<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uid="using:Laminar.PluginFramework.UserInterface.UserInterfaceDefinitions"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="40" d:DataContext="{x:Static uid:NumberEntry.DesignInstance}"
             x:DataType="uid:NumberEntry+UITarget"
             x:Class="BasicFunctionality.Avalonia.UserControls.NumberEditor">
	<DockPanel HorizontalAlignment="Stretch">
		<TextBlock DockPanel.Dock="Left" Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
		<TextBlock DockPanel.Dock="Right" Text="{Binding Definition.Units}" VerticalAlignment="Center"/>
		<NumericUpDown DockPanel.Dock="Right" Value="{Binding Value}" Margin="8,0,2,0" VerticalAlignment="Center"/>
	</DockPanel>
</UserControl>
