<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uid="using:Laminar.PluginFramework.UserInterface.UserInterfaceDefinitions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="uid:NumberEntry+UITarget"
             x:Class="BasicFunctionality.Avalonia.UserControls.NumberEditor">
	<Grid HorizontalAlignment="Stretch" ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto">
		<TextBlock Text="{Binding Name}" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center"/>
		<NumericUpDown Value="{Binding Value}" Margin="8,0,2,0" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0"/>
		<TextBlock Text="{Binding Definition.Units}" Grid.Column="2" VerticalAlignment="Center"/>
	</Grid>
</UserControl>
